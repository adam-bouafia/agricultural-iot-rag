{
  "dashboard": {
    "title": "Agricultural IoT - System Health & Infrastructure",
    "tags": ["agriculture", "system", "health", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 16,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "System Uptime",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [{
          "expr": "time() - process_start_time_seconds",
          "legendFormat": "Uptime",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 60, "color": "yellow"},
                {"value": 3600, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total HTTP Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [{
          "expr": "sum(http_requests_total)",
          "legendFormat": "Total",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 3,
        "title": "HTTP Request Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [{
          "expr": "rate(http_requests_total[1m]) * 60",
          "legendFormat": "Req/min",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqpm"
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [{
          "expr": "sum(rate(http_requests_total{status=~\"4..|5..\"}[5m])) / sum(rate(http_requests_total[5m])) * 100",
          "legendFormat": "Error %",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "HTTP Requests by Endpoint",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [{
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{path}}",
          "refId": "A"
        }],
        "yaxes": [
          {"format": "rps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "values": true,
          "avg": true,
          "current": true
        },
        "stack": true
      },
      {
        "id": 6,
        "title": "HTTP Status Code Distribution",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"2..\"}[5m]))",
            "legendFormat": "2xx Success",
            "refId": "A"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"4..\"}[5m]))",
            "legendFormat": "4xx Client Error",
            "refId": "B"
          },
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m]))",
            "legendFormat": "5xx Server Error",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "rps"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 5,
        "linewidth": 2,
        "stack": true,
        "legend": {"show": true, "alignAsTable": true, "values": true, "avg": true}
      },
      {
        "id": 7,
        "title": "API Endpoint Performance",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [{
          "expr": "sum(rate(http_requests_total[5m])) by (path, method)",
          "legendFormat": "{{method}} {{path}}",
          "format": "table",
          "instant": true,
          "refId": "A"
        }],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "path": "Endpoint",
                "method": "Method",
                "Value": "Requests/sec"
              }
            }
          },
          {
            "id": "sortBy",
            "options": {
              "fields": {},
              "sort": [{"field": "Requests/sec", "desc": true}]
            }
          }
        ]
      },
      {
        "id": 8,
        "title": "Top 10 Endpoints by Traffic",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [{
          "expr": "topk(10, sum(rate(http_requests_total[5m])) by (path))",
          "legendFormat": "{{path}}",
          "refId": "A"
        }],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "rps",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 9,
        "title": "Request Volume Trend (24h)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "targets": [{
          "expr": "sum(rate(http_requests_total[1h]))",
          "legendFormat": "Requests/hour",
          "refId": "A"
        }],
        "yaxes": [
          {"format": "rph", "label": "Requests per hour"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 3,
        "linewidth": 2
      },
      {
        "id": 10,
        "title": "Go Runtime Metrics",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "go_goroutines",
            "legendFormat": "Goroutines",
            "refId": "A"
          },
          {
            "expr": "go_threads",
            "legendFormat": "OS Threads",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Count"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 11,
        "title": "Go Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "go_memstats_alloc_bytes",
            "legendFormat": "Allocated",
            "refId": "A"
          },
          {
            "expr": "go_memstats_sys_bytes",
            "legendFormat": "System",
            "refId": "B"
          },
          {
            "expr": "go_memstats_heap_inuse_bytes",
            "legendFormat": "Heap In-Use",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
      }
    ]
  }
}

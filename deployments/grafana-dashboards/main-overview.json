{
  "dashboard": {
    "title": "Agricultural IoT - Main Overview",
    "tags": ["agriculture", "overview", "main"],
    "timezone": "browser",
    "schemaVersion": 16,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Total AI Decision Requests",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [{
          "expr": "decision_requests_total",
          "legendFormat": "Total Requests",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Sensor Readings Received",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [{
          "expr": "sensor_data_received_total",
          "legendFormat": "Total Readings",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "MQTT Messages Received",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [{
          "expr": "mqtt_messages_received_total",
          "legendFormat": "MQTT Messages",
          "refId": "A"
        }],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "horizontal"
        }
      },
      {
        "id": 4,
        "title": "System Health",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [{
          "expr": "up",
          "legendFormat": "Status",
          "refId": "A"
        }],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "text": {"valueSize": 50}
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN"},
              {"type": "value", "value": "1", "text": "UP"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "AI Decision Request Rate (5m)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [{
          "expr": "rate(decision_requests_total[5m]) * 60",
          "legendFormat": "Requests/min",
          "refId": "A"
        }],
        "yaxes": [
          {"format": "reqpm", "label": "Requests per minute"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 6,
        "title": "Sensor Data Ingestion Rate (5m)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [{
          "expr": "rate(sensor_readings_total[5m]) * 60",
          "legendFormat": "{{field_id}}",
          "refId": "A"
        }],
        "yaxes": [
          {"format": "rps", "label": "Readings per minute"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"},
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
      },
      {
        "id": 7,
        "title": "Average Decision Response Time",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
        "targets": [{
          "expr": "rate(decision_request_duration_seconds_sum[5m]) / rate(decision_request_duration_seconds_count[5m])",
          "legendFormat": "Avg Response Time",
          "refId": "A"
        }],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 10,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 2, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "HTTP Requests by Endpoint",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
        "targets": [{
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{path}}",
          "refId": "A"
        }],
        "yaxes": [
          {"format": "rps", "label": "Requests/sec"},
          {"format": "short"}
        ],
        "legend": {"show": true, "alignAsTable": true, "values": true, "current": true}
      },
      {
        "id": 9,
        "title": "HTTP Status Codes",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
        "targets": [{
          "expr": "sum(http_requests_total) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }],
        "options": {
          "legend": {"displayMode": "table", "placement": "right", "values": ["value", "percent"]}
        }
      },
      {
        "id": 10,
        "title": "Decision Request Duration Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22},
        "targets": [{
          "expr": "sum(rate(decision_request_duration_seconds_bucket[5m])) by (le)",
          "legendFormat": "{{le}}",
          "format": "heatmap",
          "refId": "A"
        }],
        "options": {
          "calculate": false,
          "calculation": {}
        },
        "yAxis": {"format": "s"}
      }
    ]
  }
}
